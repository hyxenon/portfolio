{
  "designSystem": {
    "colors": {
      "background": {
        "default": "#0a0a0a",
        "glass": "rgba(255, 255, 255, 0.1)",
        "glassBorder": "rgba(255, 255, 255, 0.18)"
      },
      "text": {
        "primary": "#ededed",
        "secondary": "#9ca3af",
        "headingGradient": "linear-gradient(to bottom right, #ffffff, #9ca3af)",
        "accent": "#d8b4fe"
      },
      "accents": [
        "#13FFAA",
        "#1E67C6",
        "#CE84F",
        "#DD335C"
      ]
    },
    "typography": {
      "fontFamily": "Poppins, sans-serif",
      "headings": {
        "h1": {
          "size": "text-4xl md:text-6xl",
          "weight": "font-black",
          "style": "bg-clip-text text-transparent bg-gradient-to-br from-white to-gray-400"
        },
        "h2": {
          "size": "text-6xl",
          "weight": "font-extrabold",
          "style": "text-white sticky top-20"
        },
        "h3": {
          "size": "text-2xl",
          "weight": "font-bold",
          "style": "text-white"
        }
      },
      "body": {
        "default": "text-gray-200",
        "large": "md:text-lg"
      }
    },
    "layout": {
      "section": {
        "padding": "py-20",
        "container": "container mx-auto",
        "structure": "flex flex-col md:flex-row"
      },
      "grid": {
        "hero": "grid min-h-screen place-content-center"
      }
    },
    "components": {
      "button": {
        "base": "flex w-fit items-center gap-2 rounded-full px-4 py-2",
        "hover": "scale-105",
        "tap": "scale-95"
      },
      "card": {
        "glass": "bg-white/10 shadow-xl p-3 rounded-3xl backdrop-blur-md border border-white/10"
      },
      "badge": {
        "base": "mb-1.5 inline-block rounded-full bg-gray-600/50 px-3 py-1.5 text-sm"
      }
    },
    "animations": {
      "library": "framer-motion",
      "hover": {
        "scale": 1.015
      },
      "tap": {
        "scale": 0.985
      },
      "transition": {
        "ease": "easeInOut",
        "duration": 0.5
      }
    }
  },
  "templates": {
    "newSection": {
      "structure": [
        "<section className='text-white py-20'>",
        "  <div className='container mx-auto flex flex-col md:flex-row'>",
        "    <div className='md:w-1/4 pr-8 mb-12 md:mb-0'>",
        "      <h2 className='text-6xl font-extrabold sticky top-20'>SECTION TITLE</h2>",
        "    </div>",
        "    <div className='md:w-3/4'>",
        "      {/* Content goes here */}",
        "    </div>",
        "  </div>",
        "</section>"
      ]
    }
  }
}
